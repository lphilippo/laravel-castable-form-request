
{
    "name": "lphilippo/laravel-castable-form-request",
    "description": "Laravel/Lumen package to add Eloquent-like casts to Form Requests.",
    "license": "MIT",
    "authors": [
        {
            "name": "Leander Philippo"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/http": "^8.0",
        "illuminate/support": "^8.0",
        "illuminate/validation": "^8.0"
    },
    "require-dev": {
        "laravel/framework": "^8.0",
        "phpunit/phpunit": "~9.0"
    },
    "autoload": {
        "psr-4": {
            "LPhilippo\\CastableFormRequest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "LPhilippo\\CastableFormRequest\\ServiceProvider"
            ]
        }
    }
}
